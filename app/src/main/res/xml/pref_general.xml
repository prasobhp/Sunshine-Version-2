<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height ="match_parent"
    >
    <EditTextPreference
        android:title="@string/pref_location_label"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_defaultvalue"
        android:inputType="text"
        android:singleLine="true"
        >

    </EditTextPreference>
    <ListPreference
        android:key="@string/pref_temp_key"
        android:title="@string/pref_temp_label"
        android:summary="Define the temperature unit"
        android:defaultValue="@string/pref_temp_default_value"
        android:entries="@array/tempUnit"
        android:entryValues="@array/tempUnitValues"
        />


</PreferenceScreen>